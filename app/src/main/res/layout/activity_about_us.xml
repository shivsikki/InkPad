<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:background="@color/color1">

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutUsCard"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="15dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" About Us"
                android:fontFamily="@font/satisfy"
                android:textSize="80sp"
                android:textColor="#ED7D5B"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="8dp"/>

            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-15dp"
                android:background="@color/gray"
                android:layout_marginEnd="-30dp"
                android:translationZ="2dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:text="This app is developed by students of Information Technology of sem V at Dharmsinh Desai University:"
                android:autoLink="none"
                android:lineSpacingExtra="8dp"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/developers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="italic|bold"
                app:layout_constraintTop_toBottomOf="@id/info"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingTop="15dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"
                android:text="\u2022 Shivam Bhat (IT131)\n\u2022 Kunj Soni (IT137)"
                android:autoLink="none"
                android:lineSpacingExtra="8dp"
                android:textIsSelectable="false" />


            <ImageView
                android:id="@+id/instagramLogo"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/instagram"
                android:contentDescription="Instagram"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="24dp"/>

            <ImageView
                android:id="@+id/emailLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/gmail"
                android:layout_marginStart="10dp"
                android:contentDescription="Email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/instagramLogo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
